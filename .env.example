# DATABASE
# Recommended: Neon (PostgreSQL)
DATABASE_URL="postgresql://user:password@hostname:port/dbname?sslmode=require"

# AUTHENTICATION (NextAuth v5)
# Generate a secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# AI (OpenRouter - using Gemma 2 9B)
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY="sk-or-..."
OPENROUTER_MODEL="google/gemma-2-9b-it"

# EMAIL (Resend)
# Get your API key from https://resend.com/
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="team@mail.networkershome.com"

# APP
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="ResumeAI"

# NOTE: Disposable email blocking list is hardcoded in lib/auth.ts
# You can extend it there if needed.
